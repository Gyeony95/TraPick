<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp">

    <com.example.trapick.Util.RoundImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/egypt_rs"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_item_script"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="TextView"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/radius_country_item"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_image"
        app:layout_constraintStart_toStartOf="@+id/iv_item_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_image"/>

    <ImageButton
        android:id="@+id/ib_item_arrow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/back_imagebutton"
        app:srcCompat="@drawable/ic_arrow_right_black_24dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>